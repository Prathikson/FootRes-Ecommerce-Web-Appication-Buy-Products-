@page
@model Itec245_Final.Pages.MyShoes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h1>@Model.Shoes.Name</h1>
    <hr />
    <dl class="row">
        <div id="carouselExample" class="carousel slide carousel-fade carousel-dark">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" " style="height:1000px;width:100%; margin-top:10px;" src="@Html.DisplayFor(model => model.Shoes.Images)" alt="Card image cap" onclick="myfunction()">

            </div>
            <div class="carousel-item">
                <img class="d-block w-100" " style="height:1000px;width:100%; margin-top:10px;" src="@Html.DisplayFor(model => model.Shoes.Images2)" alt="Card image cap" onclick="myfunction()">

            </div>
            <div class="carousel-item">
                <img class="d-block w-100" " style="height:1000px;width:100%; margin-top:10px;" src="@Html.DisplayFor(model => model.Shoes.Images3)" alt="Card image cap" onclick="myfunction()">

            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
</div>
<br/>
<br/>
